{% extends 'MaithCommonAdminBundle::adminlayout.html.twig' %}

{% block body %}
<div class="row">
    <div class="col-lg-8">
        <section class="panel panel-color">
            <header class="panel-heading text-uppercase"><i class="fa fa-pencil-square-o"></i> {% trans %}admin_category_edit_entry{% endtrans %}</header>
            <div class="panel-body">
                <form action="{{ path('admin_category_edit', { 'id': category.id }) }}" method="post" {{ form_enctype(edit_form) }}  role="form">
                    <div class="form-group">
                        {{ form_errors(edit_form.name) }}
                        <label for="{{ edit_form.name.vars.id }}">{% trans %}admin_category_name{% endtrans %}</label>
                        {{ form_widget(edit_form.name, {'attr' : {'class' : 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_errors(edit_form.orden) }}
                        <label for="{{ edit_form.orden.vars.id }}">{% trans %}admin_category_order{% endtrans %}</label>
                        {{ form_widget(edit_form.orden, {'attr' : {'class' : 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-default"><i class="fa fa-save"></i> {% trans %}admin_category_save{% endtrans %}</button>
                    </div>    
                    {{ form_rest(edit_form) }}
                </form>
            </div>
        </section>
    </div>
    <div class="col-lg-8">
        <a href="{{ path('admin_category_index') }}" class="btn btn-success" style="float: left; margin: 0!important;">
            <i class="fa fa-arrow-left"></i> {% trans %}admin_category_back_to_list{% endtrans %}
        </a>
        <form action="{{ path('admin_category_delete', { 'id': category.id }) }}" method="post" onsubmit="return confirmDeleteDialog();" style="float: left; margin-left: 10px!important;">
            <input type="hidden" name="_method" value="DELETE" />
              {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit">{% trans %}admin_category_delete{% endtrans %}</button>
      </form>
    </div>
</div>    
{% endblock %}
