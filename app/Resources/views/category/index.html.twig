{% extends 'MaithCommonAdminBundle::adminlayout.html.twig' %}

{% block pagestylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/maithcommonadmin/admin/vendor/chosen/chosen.min.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/maithcommonadmin/admin/vendor/datatables/jquery.dataTables.css') }}">
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('bundles/maithcommonadmin/admin/vendor/chosen/chosen.jquery.min.js') }}"></script>
    <script src="{{ asset('bundles/maithcommonadmin/admin/vendor/datatables/jquery.dataTables.js') }}"></script>
    <script src="{{ asset('bundles/maithcommonadmin/admin/js/datatables.js') }}"></script>
{% endblock %}

{% block body %}
<section class="panel panel-color">
  <header class="panel-heading text-uppercase"><i class="fa fa-lg fa-cogs"></i> {% trans %}admin_category_title{% endtrans %}</header>
  <div class="panel-body">
    <div class="table-responsive no-border">
      <table class="table table-bordered table-striped mg-t datatable dataTable">
        <thead>
          <tr>
            <th>{% trans %}admin_category_name{% endtrans %}</th>
            <th>{% trans %}admin_category_order{% endtrans %}</th>
            <th>{% trans %}admin_category_slug{% endtrans %}</th>
            <th>{% trans %}admin_category_actions{% endtrans %}</th>
          </tr>
        </thead>
        <tfoot>
          <tr>
            <th>{% trans %}admin_category_name{% endtrans %}</th>
            <th>{% trans %}admin_category_order{% endtrans %}</th>
            <th>{% trans %}admin_category_slug{% endtrans %}</th>
            <th>{% trans %}admin_category_actions{% endtrans %}</th>
          </tr>
        </tfoot>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.name }}</td>
                <td>{{ category.orden }}</td>
                <td>{{ category.slug }}</td>
              <td>
                  <a href="{{ path('admin_category_edit', { 'id': category.id }) }}"><i class="fa fa-pencil-square-o fa-2x"></i></a>
              </td>
            </tr>
        {% endfor %}          
          </tbody>
        </table>
      </div>
    </div>
  </section>
  
<div class="row">
  <div class="col-lg-12 text-left">
      <a href="{{ path('admin_category_new') }}" class="btn btn-success">
          <i class="fa fa-pencil-square-o"></i> {% trans %}admin_category_create{% endtrans %}
      </a>
  </div>
</div>
{% endblock %}
