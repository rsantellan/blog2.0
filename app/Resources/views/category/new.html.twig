{% extends 'MaithCommonAdminBundle::adminlayout.html.twig' %}

{% block body %}
<div class="row">
<div class="col-lg-8">
<section class="panel panel-color">
<header class="panel-heading text-uppercase"><i class="fa fa-pencil-square-o"></i> {% trans %}locales_create_entry{% endtrans %}</header>
<div class="panel-body">
<form action="{{ path('locales_create') }}" method="post" {{ form_enctype(form) }}  role="form">
<div class="form-group">
{{ form_errors(form.name) }}
<label for="{{ form.name.vars.id }}">{% trans %}locales_name{% endtrans %}</label>
{{ form_widget(form.name, {'attr' : {'class' : 'form-control'}}) }}
</div>
<div class="form-group">
{{ form_errors(form.address) }}
<label for="{{ form.address.vars.id }}">{% trans %}locales_address{% endtrans %}</label>
{{ form_widget(form.address, {'attr' : {'class' : 'form-control'}}) }}
</div>
<div class="form-group">
{{ form_errors(form.phone) }}
<label for="{{ form.phone.vars.id }}">{% trans %}locales_phone{% endtrans %}</label>
{{ form_widget(form.phone, {'attr' : {'class' : 'form-control'}}) }}
</div>  
<div class="form-group">
<button type="submit" class="btn btn-default"><i class="fa fa-save"></i> {% trans %}locales_save{% endtrans %}</button>
</div>    
{{ form_rest(form) }}
</form>
</div>
</section>
</div>
<div class="col-lg-12 text-left">
<a href="{{ path('locales') }}" class="btn btn-success">
<i class="fa fa-arrow-left"></i> {% trans %}locales_back_to_list{% endtrans %}
</a>
</div>
</div>
    
    <h1>Category creation</h1>

    {{ form_start(form) }}
        {{ form_widget(form) }}
        <input type="submit" value="Create" />
    {{ form_end(form) }}

    <ul>
        <li>
            <a href="{{ path('admin_category_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
