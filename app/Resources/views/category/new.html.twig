{% extends 'MaithCommonAdminBundle::adminlayout.html.twig' %}

{% block body %}
<div class="row">
    <div class="col-lg-8">
        <section class="panel panel-color">
            <header class="panel-heading text-uppercase"><i class="fa fa-pencil-square-o"></i> {% trans %}admin_category_create_entry{% endtrans %}</header>
            <div class="panel-body">
                <form action="{{ path('admin_category_new') }}" method="post" {{ form_enctype(form) }}  role="form">
                    <div class="form-group">
                        {{ form_errors(form.name) }}
                        <label for="{{ form.name.vars.id }}">{% trans %}admin_category_name{% endtrans %}</label>
                        {{ form_widget(form.name, {'attr' : {'class' : 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_errors(form.orden) }}
                        <label for="{{ form.orden.vars.id }}">{% trans %}admin_category_order{% endtrans %}</label>
                        {{ form_widget(form.orden, {'attr' : {'class' : 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-default"><i class="fa fa-save"></i> {% trans %}admin_category_save{% endtrans %}</button>
                    </div>    
                    {{ form_rest(form) }}
                </form>
            </div>
        </section>
    </div>
    <div class="col-lg-12 text-left">
        <a href="{{ path('admin_category_index') }}" class="btn btn-success">
            <i class="fa fa-arrow-left"></i> {% trans %}admin_category_back_to_list{% endtrans %}
        </a>
    </div>
</div>
{% endblock %}
