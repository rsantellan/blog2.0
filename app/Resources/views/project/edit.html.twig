{% extends 'MaithCommonAdminBundle::adminlayout.html.twig' %}

{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" type="text/css" href="{{ asset('bundles/maithcommonimage/css/maithalbums.css') }}" />
  <link rel="stylesheet" type="text/css" href="{{ asset('bundles/maithcommonadmin/css/colorbox.css') }}" />
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script type="text/javascript" src="{{ asset('bundles/maithcommonadmin/js/jquery.colorbox-min.js') }}"></script>    
  <script type="text/javascript" src="{{ asset('bundles/maithcommonimage/js/imagesManager.js') }}"></script>    
{% endblock %}

{% block body %}
<div class="row">
    <div class="col-lg-8">
        <section class="panel panel-color">
            <header class="panel-heading text-uppercase"><i class="fa fa-pencil-square-o"></i> {% trans %}admin_project_edit_entry{% endtrans %}</header>
            <div class="panel-body">
                <form action="{{ path('admin_project_edit', { 'id': project.id }) }}" method="post" {{ form_enctype(edit_form) }}  role="form">
                    <div class="form-group">
                        {{ form_errors(edit_form.name) }}
                        <label for="{{ edit_form.name.vars.id }}">{% trans %}admin_project_name{% endtrans %}</label>
                        {{ form_widget(edit_form.name, {'attr' : {'class' : 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_errors(edit_form.cliente) }}
                        <label for="{{ edit_form.cliente.vars.id }}">{% trans %}admin_project_cliente{% endtrans %}</label>
                        {{ form_widget(edit_form.cliente, {'attr' : {'class' : 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_errors(edit_form.tipo_de_trabajo) }}
                        <label for="{{ edit_form.tipo_de_trabajo.vars.id }}">{% trans %}admin_project_tipo_trabajo{% endtrans %}</label>
                        {{ form_widget(edit_form.tipo_de_trabajo, {'attr' : {'class' : 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_errors(edit_form.description) }}
                        <label for="{{ edit_form.description.vars.id }}">{% trans %}admin_project_description{% endtrans %}</label>
                        {{ form_widget(edit_form.description, {'attr' : {'class' : 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_errors(edit_form.orden) }}
                        <label for="{{ edit_form.orden.vars.id }}">{% trans %}admin_project_order{% endtrans %}</label>
                        {{ form_widget(edit_form.orden, {'attr' : {'class' : 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_errors(edit_form.category) }}
                        <label for="{{ edit_form.category.vars.id }}">{% trans %}admin_project_category{% endtrans %}</label>
                        {{ form_widget(edit_form.category, {'attr' : {'class' : 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_errors(edit_form.complexTags) }}
                        <label for="{{ edit_form.complexTags.vars.id }}">{% trans %}admin_project_complex_tag{% endtrans %}</label>
                        {{ form_widget(edit_form.complexTags, {'attr' : {'class' : 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_errors(edit_form.visible) }}
                        <label for="{{ edit_form.visible.vars.id }}">{% trans %}admin_project_visible{% endtrans %}</label>
                        {{ form_widget(edit_form.visible, {'attr' : {'class' : ''}}) }}
                    </div>                    
                    <div class="form-group">
                        {{ form_errors(edit_form.url) }}
                        <label for="{{ edit_form.url.vars.id }}">{% trans %}admin_project_url{% endtrans %}</label>
                        {{ form_widget(edit_form.url, {'attr' : {'class' : 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-default"><i class="fa fa-save"></i> {% trans %}admin_project_save{% endtrans %}</button>
                    </div>    
                    {{ form_rest(edit_form) }}
                </form>
            </div>
        </section>
    </div>
    <div class="row">
        <div class="col-lg-8">
            {{ render(controller('MaithCommonAdminBundle:Albums:albumsData', {'id': edit_form.vars.value.id, 'objectclass' : edit_form.vars.value.fullClassName }))}}
        </div>
    </div>
    <div class="col-lg-8">
        <a href="{{ path('admin_project_index') }}" class="btn btn-success" style="float: left; margin: 0!important;">
            <i class="fa fa-arrow-left"></i> {% trans %}admin_project_back_to_list{% endtrans %}
        </a>
        <form action="{{ path('admin_project_delete', { 'id': project.id }) }}" method="post" onsubmit="return confirmDeleteDialog();" style="float: left; margin-left: 10px!important;">
            <input type="hidden" name="_method" value="DELETE" />
              {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit">{% trans %}admin_project_delete{% endtrans %}</button>
      </form>
    </div>
</div>    
{% endblock %}
