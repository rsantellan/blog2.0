{% extends 'MaithCommonAdminBundle::adminlayout.html.twig' %}

{% block body %}
<div class="row">
    <div class="col-lg-8">
        <section class="panel panel-color">
            <header class="panel-heading text-uppercase"><i class="fa fa-pencil-square-o"></i> {% trans %}admin_project_create_entry{% endtrans %}</header>
            <div class="panel-body">
                <form action="{{ path('admin_project_new') }}" method="post" {{ form_enctype(form) }}  role="form">
                    <div class="form-group">
                        {{ form_errors(form.name) }}
                        <label for="{{ form.name.vars.id }}">{% trans %}admin_project_name{% endtrans %}</label>
                        {{ form_widget(form.name, {'attr' : {'class' : 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_errors(form.cliente) }}
                        <label for="{{ form.cliente.vars.id }}">{% trans %}admin_project_cliente{% endtrans %}</label>
                        {{ form_widget(form.cliente, {'attr' : {'class' : 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_errors(form.tipo_de_trabajo) }}
                        <label for="{{ form.tipo_de_trabajo.vars.id }}">{% trans %}admin_project_tipo_trabajo{% endtrans %}</label>
                        {{ form_widget(form.tipo_de_trabajo, {'attr' : {'class' : 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_errors(form.description) }}
                        <label for="{{ form.description.vars.id }}">{% trans %}admin_project_description{% endtrans %}</label>
                        {{ form_widget(form.description, {'attr' : {'class' : 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_errors(form.orden) }}
                        <label for="{{ form.orden.vars.id }}">{% trans %}admin_project_order{% endtrans %}</label>
                        {{ form_widget(form.orden, {'attr' : {'class' : 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_errors(form.category) }}
                        <label for="{{ form.category.vars.id }}">{% trans %}admin_project_category{% endtrans %}</label>
                        {{ form_widget(form.category, {'attr' : {'class' : 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_errors(form.complexTags) }}
                        <label for="{{ form.complexTags.vars.id }}">{% trans %}admin_project_complex_tag{% endtrans %}</label>
                        {{ form_widget(form.complexTags, {'attr' : {'class' : 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-default"><i class="fa fa-save"></i> {% trans %}admin_project_save{% endtrans %}</button>
                    </div>    
                    {{ form_rest(form) }}
                </form>
            </div>
        </section>
    </div>
    <div class="col-lg-12 text-left">
        <a href="{{ path('admin_project_index') }}" class="btn btn-success">
            <i class="fa fa-arrow-left"></i> {% trans %}admin_project_back_to_list{% endtrans %}
        </a>
    </div>
</div>
{% endblock %}
